{
  "short_name": "NeoPass",
  "name": "NeoPass - Password generator for Chrome",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "NeoPass - Simple Password Generator. Easy to use, hard to guess.",
  "icons": {
    "128": "logo128.png"
  },
  "permissions": ["clipboardWrite"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "logo128.png",
    "default_popup": "popup.html"
  },
  "options_page": "index.html"
}
